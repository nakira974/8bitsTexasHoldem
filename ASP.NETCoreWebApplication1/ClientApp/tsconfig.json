{
  "compileOnSave": true,
  "ts-node": {
    "pretty": true
  },
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "src",
    "jsx": "react"
  },
  "include": [
    "./src/*",
    "./src/demos/*.tsx",
    "./src/components/*.tsx",
    "./src/components/api-authorization/*.tsx",
    "./typings/*.d.ts",
    "../packages/*"
  ]
}